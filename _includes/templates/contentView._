<div id='content' class='columns medium-12'>
  <div class='row'>
    <div class='columns medium-12'>
      <a class="scrollControls show-for-small-down"><i class='fa fa-angle-double-up'></i> Jump to FILTERS</a>
      <div class='show-for-small-down'><span class='label'><%= collection.length %></span> projects</div>
      <div class="row">
        <!-- SWITCH VIEW -->
        <ul class="large-6 columns button-group">
          <li><a data-view='stats' class="button small changeView">Stats</a></li>
          <li><a data-view='map' class="button small changeView">Map</a></li>
          <li><a data-view='list' class="button small changeView">List</a></li>
        </ul>

        <!-- DOWNLOAD LINKS -->
        <div class="large-6 columns">
          <button data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="hide-for-touch button small dropdown">
            <i class='fa fa-download'></i> Download
          </button><br>
          <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
            <li><a href="{{ site.baseurl }}/api/projects.csv">All projects</a></li>
            <li><a href="{{ site.baseurl }}/api/countries.csv">Countries list</a></li>
          </ul>
        </div>

      </div>
    </div>
  </div>
  <div class="row">
    <div id='map' class='columns medium-12'></div></div>
    <div id='list' class='columns medium-12'>
      <ul>
        <% _.each(collection, function(project){ %>
          <li>
            <a href="#project/<%= project.project_id %>">
              <%= project.project_title %> [<%= project.project_id %>] 
            </a>
          </li>
        <% }) %>
      </ul>
  </div>
</div>