<fieldset>  
  <legend>Filter</legend>
  <div>Current filters: <%= collection.length %></div>
  <% if(activeFilters.length > 0) { %>
    <a class='resetFilters'>Remove filters</a>
  <% } %>
  <ul class='activeFiltersList'>
    <% _.each(activeFilters, function(filter){ %>
      <li class='activeFilter'>
        <a
          data-filter-name='<%= filter.name %>'
          data-filter-value='<%= filter.value %>'>
          <%= s.humanize(filter.value) %>
        </a>
      </li>
    <% }) %>
  </ul>
  <% _.each(filterGroups, function(filterGroup){ %>
    <dl>
      <dt><%= s.humanize(filterGroup.data.name) %></dt>
      <% _.each(filterGroup.values, function(filterItem){ %>
        <dd class='filterName'>
          <a class='addFilter'
            data-filter-name='<%= filterGroup.data.name %>'
            data-filter-value='<%= filterItem.value %>'>
            <%= s.humanize(filterItem.value) %> 
            (<%= filterItem.activeCount %>) 
          </a>
        </dd>
      <% }) %>
    </dl>  
  <% }) %>
</fieldset>