<a class="w-clearfix w-inline-block control-section-title-block" href="#" data-ix="showhide-all-filters">
  <div class="title">Apply search filters</div><img class="filters-disclose" src="images/down4.png" width="26" alt="54e7798d942b09583a0ebb69_down4.png">
</a>

<div class="filters" id="filters">

  <% _.each(filterGroups, function(filterGroup){ %>

  <div class="filter-group">
    <a class="group-title" href="#" data-ix="showhide-filter-groups"><%= s.humanize(filterGroup.data.name) %></a>
    <% _.each(filterGroup.values, function(filterItem){ %>
      <a class="w-clearfix w-inline-block group-item" href="#"
        data-filter-name='<%= filterGroup.data.name %>'
        data-filter-value='<%= filterItem.value %>'>
        <div class="item-text"><%= app.filters.nameFromShort(filterItem.value) %></div>
        <div class="item-count"><%= filterItem.activeCount %></div>
      </a>
      <% }) %>
  </div>
  <% }) %>
</div>


