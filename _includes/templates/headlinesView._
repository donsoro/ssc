<div class="w-clearfix headlines">
  <div class="filter-headlines">
    <div class="primary-filter"><%= stats.primaryFilterTitle %></div>
    <% if(stats.hasSecondaryFilters){ %>
    <div class="w-hidden-medium w-hidden-small w-hidden-tiny secondary-filter-summary">+ <%= stats.secondaryFilterCount %> other filters</div>
    <% } %>
  </div>
  <div class="w-clearfix count-headlines">
    <div class="w-hidden-small w-hidden-tiny count-block">
      <div class="count-value"><%= stats.activeCountriesCount %></div>
      <div class="count-type">countries</div>
    </div>
    <div class="count-block">
      <div class="count-value"><%= collection.length %></div>
      <div class="count-type">projects</div>
    </div>
  </div>
</div>